
@{
    Layout = null;
}

<!DOCTYPE html>
@model Factory_Managment_Website.Models.Shift
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add New Shift</title>
</head>
<body>
<ul class="nav navbar-nav" style="float: top!important">
        @if (Session["username"] != null)
         {<li> @Session["fullname"] logged in </li>
         <li>@Html.ActionLink("Logout", "Logout", "HomePage") </li>}

    </ul>
<div>
    <form action="/Shift/New" method="post">

        ID: @Html.TextBoxFor(x => x.ID) <br/>

        Date: @Html.TextBoxFor(x => x.Date) <br/>

        Start Time: @Html.TextBoxFor(x => x.Start_time) <br/>

        End Time: @Html.TextBoxFor(x => x.End_time) <br/>

        <input type="submit" value="Save"/>
    </form>
</div>
</body>
</html>
